<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ep_details_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBackgroundFloating">

        <ImageView
            android:id="@+id/ep_details_fanart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            app:foregroundScrim="@{android.graphics.Color.BLACK}"
            app:layout_constraintDimensionRatio="w,1:1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmdbBackdropPath="@{state.episode.invoke().tmdbBackdropPath}"
            app:tmdbImageUrlProvider="@{state.tmdbImageUrlProvider.invoke()}" />

        <app.tivi.ui.widget.BaselineGridTextView
            android:id="@+id/ep_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:elevation="4dp"
            android:ellipsize="end"
            android:text="@{state.episode.invoke().title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintBottom_toBottomOf="@+id/ep_details_fanart"
            app:layout_constraintEnd_toStartOf="@+id/ep_details_fab"
            app:layout_constraintStart_toStartOf="@+id/ep_details_fanart"
            tools:text="@sample/shows.txt" />

        <app.tivi.ui.widget.CheckableFloatingActionButton
            android:id="@+id/ep_details_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:checked="@{state.action == Action.WATCH}"
            android:src="@drawable/sl_watch"
            android:onClick="@{() -> state.action == Action.WATCH ? viewModel.markWatched() : viewModel.markUnwatched()}"
            app:layout_constraintBottom_toTopOf="@+id/ep_details_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ep_details_rv" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/ep_details_rv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:minHeight="100dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ep_details_fanart"
            app:paddingBottomGestureInsets="@{true}"
            app:spanCount="3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <import type="app.tivi.showdetails.episodedetails.EpisodeDetailsViewState.Action" />

        <variable
            name="state"
            type="app.tivi.showdetails.episodedetails.EpisodeDetailsViewState" />

        <variable
            name="viewModel"
            type="app.tivi.showdetails.episodedetails.EpisodeDetailsViewModel" />
    </data>

</layout>